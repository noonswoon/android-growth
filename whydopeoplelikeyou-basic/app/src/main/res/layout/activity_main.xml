<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".MainActivity"
                android:background="#ffffffff"
                android:id="@+id/main">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/image_profile"
        android:layout_alignStart="@+id/button_generate"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/profile_default"
        android:scaleType="fitCenter"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/view_text_name"
        tools:text="Your Name"
        android:layout_toStartOf="@+id/button_generate"
        android:layout_alignLeft="@+id/image_profile"
        android:layout_alignRight="@+id/image_profile"
        android:gravity="center|center_vertical|center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/image_profile"/>

    <view
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        class="com.facebook.login.widget.LoginButton"
        android:id="@+id/button_login"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Generate"
        android:id="@+id/button_generate"
        android:visibility="invisible"
        tools:visibility="visible"
        android:layout_below="@+id/button_share"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/view_text_result"
        tools:text="You're extroverted person. Easy-going with everyone and you’re kind. That’s why people like you."
        android:gravity="center|center_vertical|center_horizontal"
        android:layout_below="@+id/view_text_name"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:layout_alignParentTop="false"/>

    <view
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        class="com.facebook.share.widget.ShareButton"
        android:id="@+id/button_share"
        android:layout_below="@+id/button_login"
        android:layout_centerHorizontal="true"
        android:layout_alignLeft="@+id/button_login"
        android:layout_alignRight="@+id/button_login"
        android:layout_marginTop="15dp"
        android:visibility="invisible"
        tools:visibility="visible"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADS"
        android:id="@+id/button_dialog"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/button_share"
        android:layout_alignStart="@+id/button_share"
        android:layout_alignRight="@+id/button_share"
        android:layout_alignEnd="@+id/button_share"/>

</RelativeLayout>
