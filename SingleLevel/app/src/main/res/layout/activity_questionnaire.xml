<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="com.noonswoonapp.singlelevel.Questionnaire"
              android:background="@drawable/bg_default">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:background="#ffffffff">

        <ImageView
            android:id="@+id/imageview_questionnaire"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scaleType="fitCenter"
            android:src="@drawable/logo"
            android:layout_weight="1"
            android:layout_margin="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/textview_question"
            android:background="#ffffffff"
            android:textColor="#ff000000"
            android:autoText="false"
            android:gravity="center"
            android:textSize="30dp"
            />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:layout_margin="10dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="New Button"
                    android:id="@+id/button_choice1"
                    android:layout_weight="1"
                    android:background="@drawable/button_border"
                    android:layout_margin="4dp"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="New Button"
                    android:id="@+id/button_choice2"
                    android:layout_weight="1"
                    android:background="@drawable/button_border"
                    android:layout_margin="4dp"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="New Button"
                    android:id="@+id/button_choice3"
                    android:layout_weight="1"
                    android:background="@drawable/button_border"
                    android:layout_margin="4dp"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="New Button"
                    android:id="@+id/button_choice4"
                    android:layout_weight="1"
                    android:background="@drawable/button_border"
                    android:layout_margin="4dp"/>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
