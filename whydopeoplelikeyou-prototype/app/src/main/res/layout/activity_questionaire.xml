<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.noonswoonapp.moonswoon.Questionnaire"
                android:background="@drawable/bg">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/layout_questionnaire">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/view_image_question"
            tools:src="@drawable/question_1"
            android:adjustViewBounds="true"
            android:maxWidth="200dp"
            android:maxHeight="200dp"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Question"
            android:id="@+id/view_text_question"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center|center_vertical|center_horizontal"
            android:textSize="30sp"
            android:textIsSelectable="false"
            android:layout_weight="2"
            android:background="#00ffffff"
            android:textColor="#FFFFFF"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="226dp"
            android:layout_weight="5"
            android:background="#ffffffff">

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/button_choice1"
                android:layout_centerHorizontal="true"
                android:background="#FFFFFFFF"
                android:layout_alignParentTop="false"
                android:layout_marginBottom="25dp"
                android:layout_above="@+id/button_choice2"
                android:layout_alignLeft="@+id/button_choice2"
                android:layout_alignRight="@+id/button_choice2"
                android:textSize="25sp"
                style="@style/MyRadioButtonStyle"
                android:checked="false"/>

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/button_choice2"
                android:background="#FFFFFFFF"
                android:layout_centerInParent="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="50dp"
                android:textSize="25sp"
                style="@style/MyRadioButtonStyle"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button_choice3"
                android:layout_below="@+id/button_choice2"
                android:layout_marginTop="25dp"
                android:layout_alignLeft="@+id/button_choice1"
                android:layout_alignRight="@+id/button_choice2"
                android:background="#FFFFFFFF"
                android:textSize="25sp"
                style="@style/MyRadioButtonStyle"/>
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
